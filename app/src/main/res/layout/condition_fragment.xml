<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="me.berfini.household.data.CharacterViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_top_margin"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/distressed"
                    android:text="D"
                    android:textColor="@color/black"
                    android:textSize="@dimen/capital_size"
                    android:textStyle="bold"
                    app:fontFamily="@font/distressed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sydonia"
                    android:text="ECORUM"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    app:fontFamily="@font/sydonia" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/decorum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    decorum="@{viewModel.decorum}"
                    android:src="@drawable/decorum_5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_alignTop="@id/decorum"
                    android:layout_alignBottom="@id/decorum"
                    android:orientation="horizontal">

                    <View
                        android:onClick="@{() -> viewModel.toggle(viewModel.decorum, 1)}"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <View
                        android:onClick="@{() -> viewModel.toggle(viewModel.decorum, 2)}"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <View
                        android:onClick="@{() -> viewModel.toggle(viewModel.decorum, 3)}"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <View
                        android:onClick="@{() -> viewModel.toggle(viewModel.decorum, 4)}"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <View
                        android:onClick="@{() -> viewModel.toggle(viewModel.decorum, 5)}"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sydonia"
                android:layout_marginTop="@dimen/subtitle_top_margin"
                android:text="UNCOUTH DECENT TASTEFUL ELEGANT EMBELLISHED"
                android:textSize="13sp"
                app:fontFamily="@font/sydonia" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_top_margin"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/distressed"
                    android:text="C"
                    android:textColor="@color/black"
                    android:textSize="@dimen/capital_size"
                    android:textStyle="bold"
                    app:fontFamily="@font/distressed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sydonia"
                    android:text="ONDITION"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    app:fontFamily="@font/sydonia" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/subtitle_top_margin"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/ace_big_size"
                            android:layout_height="@dimen/ace_big_size"
                            android:src="@drawable/heart_full" />

                        <ImageView
                            android:layout_width="@dimen/ace_big_size"
                            android:layout_height="@dimen/ace_big_size"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/diamond_full" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sydonia"
                            android:text="TURMOIL"
                            android:textColor="@color/black"
                            android:textSize="@dimen/subtitle_size"
                            android:layout_marginStart="10dp"
                            app:fontFamily="@font/sydonia" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sydonia"
                        android:layout_marginTop="@dimen/subtitle_top_margin"
                        android:text=""
                        android:textSize="13sp"
                        app:fontFamily="@font/sydonia" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/ace_big_size"
                            android:layout_height="@dimen/ace_big_size"
                            android:src="@drawable/club_full" />

                        <ImageView
                            android:layout_width="@dimen/ace_big_size"
                            android:layout_height="@dimen/ace_big_size"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/spade_full" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sydonia"
                            android:text="TENSION"
                            android:textColor="@color/black"
                            android:textSize="@dimen/subtitle_size"
                            android:layout_marginStart="10dp"
                            app:fontFamily="@font/sydonia" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <CheckBox
                        android:onClick="@{() -> viewModel.toggle(viewModel.turmoil, 1)}"
                        android:checked="@{viewModel.turmoil >= 1}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sydonia"
                        android:layout_marginTop="@dimen/subtitle_top_margin"
                        android:text="-"
                        android:textSize="13sp"
                        app:fontFamily="@font/sydonia" />

                    <CheckBox
                        android:onClick="@{() -> viewModel.toggle(viewModel.tension, 1)}"
                        android:checked="@{viewModel.tension >= 1}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <CheckBox
                        android:onClick="@{() -> viewModel.toggle(viewModel.turmoil, 2)}"
                        android:checked="@{viewModel.turmoil >= 2}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sydonia"
                        android:layout_marginTop="@dimen/subtitle_top_margin"
                        android:text="-1"
                        android:textSize="13sp"
                        app:fontFamily="@font/sydonia" />

                    <CheckBox
                        android:onClick="@{() -> viewModel.toggle(viewModel.tension, 2)}"
                        android:checked="@{viewModel.tension >= 2}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <CheckBox
                        android:onClick="@{() -> viewModel.toggle(viewModel.turmoil, 3)}"
                        android:checked="@{viewModel.turmoil >= 3}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sydonia"
                        android:layout_marginTop="@dimen/subtitle_top_margin"
                        android:text="-2"
                        android:textSize="13sp"
                        app:fontFamily="@font/sydonia" />

                    <CheckBox
                        android:onClick="@{() -> viewModel.toggle(viewModel.tension, 3)}"
                        android:checked="@{viewModel.tension >= 3}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <CheckBox
                        android:onClick="@{() -> viewModel.toggle(viewModel.turmoil, 4)}"
                        android:checked="@{viewModel.turmoil >= 4}"
                        android:background="@drawable/checkbox_2"
                        android:layout_margin="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sydonia"
                        android:layout_marginTop="@dimen/subtitle_top_margin"
                        android:text="+1"
                        android:textSize="13sp"
                        app:fontFamily="@font/sydonia" />

                    <CheckBox
                        android:onClick="@{() -> viewModel.toggle(viewModel.tension, 4)}"
                        android:checked="@{viewModel.tension >= 4}"
                        android:background="@drawable/checkbox_2"
                        android:layout_margin="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <CheckBox
                        android:onClick="@{() -> viewModel.toggle(viewModel.turmoil, 5)}"
                        android:checked="@{viewModel.turmoil >= 5}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sydonia"
                        android:layout_marginTop="@dimen/subtitle_top_margin"
                        android:text="X"
                        android:textSize="13sp"
                        app:fontFamily="@font/sydonia" />

                    <CheckBox
                        android:onClick="@{() -> viewModel.toggle(viewModel.tension, 5)}"
                        android:checked="@{viewModel.tension >= 5}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.condition}"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_top_margin"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/distressed"
                    android:text="C"
                    android:textColor="@color/black"
                    android:textSize="@dimen/capital_size"
                    android:textStyle="bold"
                    app:fontFamily="@font/distressed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sydonia"
                    android:text="ONTRACTS"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    app:fontFamily="@font/sydonia" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/subtitle_top_margin"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.contracts}" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_top_margin"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/distressed"
                    android:text="T"
                    android:textColor="@color/black"
                    android:textSize="@dimen/capital_size"
                    android:textStyle="bold"
                    app:fontFamily="@font/distressed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sydonia"
                    android:text="ERRIBLE TERRIBLE THINGS"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    app:fontFamily="@font/sydonia" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ttt" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.ttt}" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>

</layout>