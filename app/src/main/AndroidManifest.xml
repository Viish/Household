<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.berfini.household">

    <application
        android:name=".HouseholdApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon_color"
        android:label="@string/app_name"
        android:theme="@style/Theme.Household"
        tools:targetApi="31">

        <activity android:name=".activities.CharacterLoaderActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".activities.CharacterActivity"
            android:exported="true" />

    </application>

</manifest>